<launch>
  <!-- Launch Arguments -->
  <arg name="use_sim_time" default="false" description="Use simulation time" />
  <arg name="lidar_config" default="$(find-pkg-share shr_launcher)/config/lidar_params.yaml" description="Config file for first LiDAR" />


  <!-- First YDLiDAR T-semi -->
  <!-- <node pkg="ydlidar_ros2_driver" exec="ydlidar_ros2_driver_node" name="ydlidar_driver" output="screen">
    <param name="use_sim_time" value="$(var use_sim_time)" />
    <param from="$(var lidar_config)" />
  </node> -->

  <!-- Static Transform Publishers -->
  <!-- Transform for first LiDAR -->
  <node pkg="tf2_ros" exec="static_transform_publisher" name="static_tf_pub_laser1" args="0.2 0 0.02 0 0 0 1 base_link laser_frame" />

</launch>
