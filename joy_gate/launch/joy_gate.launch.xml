<?xml version="1.0"?>
<launch>
  <!-- Launch arguments -->
  <arg name="use_sim_time" 
       default="false" 
       description="Use simulation time" />
  <arg name="log_level" 
       default="info" 
       description="Log level (debug, info, warn, error, fatal)" />

  <!-- Joy Gate Node -->
  <node pkg="joy_gate" 
        exec="joy_gate_node" 
        name="joy_gate" 
        output="screen"
        args="--ros-args --log-level $(var log_level)">
    <param name="use_sim_time" value="$(var use_sim_time)" />
  </node>
</launch>